<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/graph_watch_later"
    app:startDestination="@id/watchLaterFragment">

    <fragment
        android:id="@+id/watchLaterFragment"
        android:name="com.example.cinematicapp.presentation.ui.later.WatchLaterFragment"
        android:label="WatchLaterFragment"
        tools:layout="@layout/fragment_watch_later">
        <action
            android:id="@+id/action_watchLaterFragment_to_filmInfoFragment"
            app:destination="@id/filmInfoFragment"
            app:popExitAnim="@android:anim/fade_out" />
    </fragment>
    <fragment
        android:id="@+id/filmInfoFragment"
        android:name="com.example.cinematicapp.presentation.ui.filmInfo.FilmInfoFragment"
        android:label="FilmInfoFragment"
        tools:layout="@layout/fragment_film_info">
        <argument
            android:name="id"
            app:argType="integer" />
    </fragment>
</navigation>