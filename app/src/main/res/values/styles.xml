<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="base_text_input_layout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">@color/main_editText</item>
        <item name="errorIconDrawable">@null</item>
        <item name="hintEnabled">false</item>
        <item name="hintTextColor">@color/black</item>
        <item name="boxCornerRadiusBottomEnd">20dp</item>
        <item name="boxCornerRadiusBottomStart">20dp</item>
        <item name="boxCornerRadiusTopEnd">20dp</item>
        <item name="boxCornerRadiusTopStart">20dp</item>
    </style>

    <style name="base_text_input_edit_text">
        <item name="android:paddingBottom">20dp</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="base_text_input_layout_pass" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">@color/main_editText</item>
        <item name="errorIconDrawable">@null</item>
        <item name="hintEnabled">false</item>
        <item name="hintTextColor">@color/black</item>
        <item name="boxCornerRadiusBottomEnd">20dp</item>
        <item name="boxCornerRadiusBottomStart">20dp</item>
        <item name="boxCornerRadiusTopEnd">20dp</item>
        <item name="boxCornerRadiusTopStart">20dp</item>
        <item name="passwordToggleEnabled">true</item>
    </style>

    <style name="base_text_input_edit_text_pass">
        <item name="android:paddingBottom">20dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:inputType">textPassword</item>
    </style>
</resources>